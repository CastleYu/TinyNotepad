<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.casyu.tinynotepad.Controller">
    <MenuBar>
        <Menu mnemonicParsing="false" text="文件">
            <MenuItem mnemonicParsing="false" onAction="#handleNew" text="新建"/>
            <MenuItem mnemonicParsing="false" onAction="#handleOpen" text="打开"/>
            <MenuItem mnemonicParsing="false" onAction="#handleSave" text="保存"/>
        </Menu>
        <!-- 可以添加更多菜单项，如编辑、帮助等 -->
    </MenuBar>
    <TextArea fx:id="textArea" editable="true" prefHeight="300.0" prefWidth="400.0" wrapText="true"/>
    <!-- 如果需要工具栏，可以在这里添加 -->
</VBox>
