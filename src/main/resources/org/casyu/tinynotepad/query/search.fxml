<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.casyu.tinynotepad.query.SearchController">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <children>
        <GridPane hgap="10" vgap="10">
            <children>
                <Label text="查找内容:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="searchField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="替换为:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="replaceField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <HBox spacing="10" alignment="CENTER_RIGHT" GridPane.rowIndex="2" GridPane.columnSpan="2">
                    <children>
                        <Button fx:id="searchButton" text="查找"/>
                        <Button fx:id="replaceButton" text="替换"/>
                    </children>
                </HBox>
            </children>
        </GridPane>
    </children>
</VBox>
